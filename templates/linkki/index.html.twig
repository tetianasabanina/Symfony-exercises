{% extends 'base.html.twig' %}

{% block title %}Linkkilista{% endblock %}

 {% block body %}
 
    <h1>Linkkilistaus</h1>
    <table class="table table-hover">
        <thead>
            <tr>
            <th>ID</th>
            <th>Linkki</th>
            <th>Otsikko</th>
            <th>Avainsana</th>
            <th>Kuvaus</th>
            <th>Toiminnot</th>
            </tr>
        </thead>
        <tbody>
            {% for linkki in linkit %}
                <tr>
                <th>{{ linkki.id }}</th>
                <td>{{ linkki.linkki }}</td>
                <td>{{ linkki.otsikko }}</td>
                <td>{{ linkki.avainsana }}</td>
                <td>{{ linkki.kuvaus }}</td>
                <td>
                    <a href="{{ path('linkki_nayta', {id: linkki.id}) }}" class="btn btn-dark">Näytä</a>
                    <!-- <a href="{{ path('linkki_muokkaa', {id: linkki.id}) }}" class="btn btn-success">Muokkaa</a> -->
                    <button muokkaa-linkki="{{ linkki.id }}" class="btn btn-success muokkaa-linkki">Muokkaa</button>
                    <!-- <a href="{{ path('linkki_poista', {id: linkki.id}) }}" class="btn btn-success">Poista</a>-->
                    <button poista-linkki="{{ linkki.id }}" class="btn btn-danger poista-linkki">Poista</button>
                </td>
                </tr>
            {% endfor %}
        </tbody>

    </table>
 
 {% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="js/main.js"></script>
{% endblock %}